<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_equipment_state"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.cit.abakar.application.EquipmentStateActivity">

    <Switch
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch1InEquipmentState"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="25dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="37dp" />

    <Switch
        android:text=""
        android:elevation="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/switch2InEquipmentState"
        android:layout_below="@+id/switch1InEquipmentState"
        android:layout_alignStart="@+id/switch1InEquipmentState" />

    <com.cit.abakar.application.MultiSelectionSpinner
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:id="@+id/spinnerInEquipmentStateActivity"
        android:layout_below="@+id/buttonInEquipmentState"
        android:layout_alignParentStart="true" />

    <Button
        android:text="@string/DoesNotWork"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonInEquipmentState"
        android:layout_below="@+id/switch1InEquipmentState"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="@string/fg_availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/switch1InEquipmentState" />

    <TextView
        android:text="@string/fg_usings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerInEquipmentStateActivity"
        android:layout_alignStart="@+id/switch2InEquipmentState"
        android:layout_marginBottom="14dp"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_alignTop="@+id/spinnerInEquipmentStateActivity"
        android:layout_centerHorizontal="true"
        android:id="@+id/editTextWhenIsWorking" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/buttonInEquipmentState"
        android:id="@+id/progressBarInEquipmentStateActivity"
        android:visibility="gone"
        android:layout_alignTop="@+id/spinnerInEquipmentStateActivity" />

    <Button
        android:text="@string/Send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonWhenIsWorking"
        android:layout_alignBaseline="@+id/buttonInEquipmentState"
        android:layout_alignBottom="@+id/buttonInEquipmentState"
        android:layout_alignStart="@+id/buttonInEquipmentState"
        style = "@style/ButtonSP"/>

    <Button
        android:text="@string/Send"
        android:elevation="5dp"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2InEquipmentState"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
